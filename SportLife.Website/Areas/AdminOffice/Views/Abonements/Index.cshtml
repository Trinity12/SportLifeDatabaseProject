@model IEnumerable<SportLife.Core.Database.Abonement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminOffice/Views/AdminHome/Index.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AbonementName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AbonementDuring)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AbonementTrainings)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AbonementName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AbonementDuring)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AbonementTrainings)
        </td>
